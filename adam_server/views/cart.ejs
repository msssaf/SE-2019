<html>
	<head>
		<title>Codename Adam</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="assets_escape_velocity/css/main.css" />
	</head>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<section id="header" class="wrapper">

					<!-- Logo -->
						<div id="logo">
							<h1><a href="/">Codename Adam</a></h1>
						</div>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li class="current"><a href="/">Home</a></li>
								<li>
									<a href="/menu">Menu</a>
									<ul>
										<li><a href="/popular-dishes">Most Popular</a></li>
										<li><a href="/appetizers">Appetizers</a></li>
										<li><a href="/entrees">Entrees</a></li>
										<li><a href="/drinks">Drinks</a></li>
										<li><a href="/desserts">Desserts</a></li>
									</ul>
								</li>
								<li><a href="/recommend-me">Recommend Me</a></li>
								<li><a href="/cart">Cart</a></li>
								<li><a href="/reserve">Reserve</a></li>
								<li><a href="#">Your Profile</a></li>
							</ul>
						</nav>

				</section>

			<!-- Main -->
				<section id="main" class="wrapper style3">
					<div class="title">Your Cart</div>
					<div class="container">

						<!-- Features -->
							<section id="features">
								<div class="feature-list">
									<div class="row">
										<!-- CART INFORMATION -->
										<div class="aln-center">
											<section>
												<h3>Order Information</h3>
												<table>
													<tr>
														<th><strong>Dish</strong></th>
														<th><strong>Subtotal</strong></th>
														<th><strong>Modify?</strong></th>
													</tr>
													<%for(var i=0;i<cartItems.length;i++){ %>
													<tr>
														<th><%=cartItems[i].title%></th>
														<th><%=cartItems[i].price%></th>
														<th>
															<form method="get" action=<%="api/remove-from-cart/"+cartItems[i]._id.toString()%>>
																<div class="row gtr-50">
																	<div class="aln-center">
																		<button type="submit">Remove</button>
																	</div>
																</div>
															</form>
														</th>
													</tr>
													<%}%>
												</table>
												<strong>Total Cost: <%=totalPrice%></strong>
											</section>
										</div>
										<div class="aln-center">
											<section>
												<h3>Payment Confirmation</h3>
												<form method="post" action="/submit-cart-website">
													<div class="row gtr-50">
														<div class="aln-center">
															<button type="submit">Send Order</button>
														</div>
													</div>
												</form>
											</section>
										</div>
									</div>
								</div>
							</section>

					</div>
				</section>

		</div>

		<!-- Scripts -->
			<script src="assets_escape_velocity/js/jquery.min.js"></script>
			<script src="assets_escape_velocity/js/jquery.dropotron.min.js"></script>
			<script src="assets_escape_velocity/js/browser.min.js"></script>
			<script src="assets_escape_velocity/js/breakpoints.min.js"></script>
			<script src="assets_escape_velocity/js/util.js"></script>
			<script src="assets_escape_velocity/js/main.js"></script>

	</body>
</html>