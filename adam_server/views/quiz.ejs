	<%- include head.ejs %>

	<!-- Seerat worked on this -->

	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Main -->
				<section id="main" class="wrapper style3">
					<div class="title">Meal Recommendation Quiz</div>
					<div class="container">

						<!-- Features -->
							<section id="features">
								<div class="feature-list">
									<div class="row">
										<div class="col-12 aln-center">
											<section>
												<form method="post" action=<%="/api/submit-rec-quiz/"+customerID.toString()%>>
													<div class="row">
														<div class="row">
															<p>
																<strong>Question 1: </strong>
																What types of food that you normally like to eat? 
															</p>
														</div>
														<br>
														<div class="col-4">
															<!-- OPTION 1 -->
															<label><input type = "radio" name = "taste" id = "tasteSavory" value = "savory" checked = "checked" /> Savory </label>
            												<!-- OPTION 2 -->
          													<label><input type = "radio" name = "taste" id = "tasteSweet" value = "sweet" /> Sweet </label>
          													<!-- OPTION 3 -->
          													<label><input type = "radio" name = "taste" id = "tasteSpicy" value = "spicy" /> Spicy </label>
														</div>
													</div>
													<br>
													<div class="row">
														<div class="row">
															<p>
																<strong>Question 2: </strong>
																What types of meat do you like to eat the most? Are you vegetarian? 
															</p>
														</div>
														<div class="col-4">
															<!-- OPTION 1 -->
															<label><input type = "radio" name = "meat" id = "meat1" value = "vegetarian" checked = "checked" /> I'm vegetarian. </label>
            												<!-- OPTION 2 -->
          													<label><input type = "radio" name = "meat" id = "meat2" value = "redMeat" /> Red Meat </label>
          													<!-- OPTION 3 -->
          													<label><input type = "radio" name = "meat" id = "meat3" value = "whiteMeat" /> White Meat </label>
          													<!-- OPTION 4 -->
          													<label><input type = "radio" name = "meat" id = "meat4" value = "seafood" /> Seafood </label>
														</div>
													</div>
													<br>
													<div class="row">
														<div class="row">
															<p>
																<strong>Question 3:</strong>
																Do you want to indulge or eat on the healthier side? 
															</p>
														</div>
														<div class="col-4">
															<!-- OPTION 1 -->
															<label><input type = "radio" name = "health" id = "healthy" value = "healthy" checked = "checked" /> I want to eat healthy today. </label>
            												<!-- OPTION 2 -->
          													<label><input type = "radio" name = "health" id = "notHealthy" value = "unhealthy" /> I want to indulge. </label>
														</div>
													</div>
													<br>
													<div class="row">
														<div class="row">
															<p>
																<strong>Question 4:</strong>
																Which one of these foods sounds the most appealing to you? 
															</p>
														</div>
														<div class="col-4">
															<!-- OPTION 1 -->
															<label><input type = "radio" name = "carbs" id = "noCarbs" value = "noCarbs" checked = "checked" /> A fruit salad. </label>
            												<!-- OPTION 2 -->
          													<label><input type = "radio" name = "carbs" id = "someCarbs" value = "someCarbs" /> Lentils with Quinoa. </label>
          													<!-- OPTION 3 -->
          													<label><input type = "radio" name = "carbs" id = "lotsCarbs" value = "lotsCarbs" /> Pasta stacked with parmesan cheese. </label>
														</div>
													</div>													
													<br>
													<div class="row">
														<div class="row">
															<p>
																<strong>Question 5:</strong>
																How about some drinks? 
															</p>
														</div>
														<div class="col-4">
															<!-- OPTION 1 -->
															<label><input type = "radio" name = "drinks" id = "water" value = "water" checked = "checked" /> Just water, please. </label>
            												<!-- OPTION 2 -->
          													<label><input type = "radio" name = "drinks" id = "caffeine" value = "caffeine" /> I need some tea/coffee. </label>
          													<!-- OPTION 3 -->
          													<label><input type = "radio" name = "drinks" id = "fountain" value = "fountain" /> A fountain drink </label>
														</div>
													</div>	
													<br>
													<div class="row">
														<div class="row">
															<div class="col-12" align="center">
																<button type="submit">Submit Quiz</button>
															</div>
														</div>
													</div>
											</form>
										</section>
										</div>
									</div>
								</div>
							</section>
						</div>
					</section>
					</div>

		<!-- Scripts -->
			<script src="assets_escape_velocity/js/jquery.min.js"></script>
			<script src="assets_escape_velocity/js/jquery.dropotron.min.js"></script>
			<script src="assets_escape_velocity/js/browser.min.js"></script>
			<script src="assets_escape_velocity/js/breakpoints.min.js"></script>
			<script src="assets_escape_velocity/js/util.js"></script>
			<script src="assets_escape_velocity/js/main.js"></script>

	</body>
</html>